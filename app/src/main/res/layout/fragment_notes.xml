<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/noteToolbar"
            android:background="#E9DCFE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/instantDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdasd"/>

        </com.google.android.material.appbar.MaterialToolbar>



        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/taskListRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/noteToolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/noteListRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/taskListRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_add_note"
            app:layout_constraintBottom_toTopOf="@id/addButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/addNoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add note"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/addNoteButton"
            app:layout_constraintEnd_toStartOf="@id/addNoteButton"
            app:layout_constraintTop_toTopOf="@+id/addNoteButton" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_add_task"
            app:layout_constraintBottom_toTopOf="@id/addNoteButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/addTaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add task"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/addTaskButton"
            app:layout_constraintEnd_toStartOf="@id/addTaskButton"
            app:layout_constraintTop_toTopOf="@+id/addTaskButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>